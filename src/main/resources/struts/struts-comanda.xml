<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	
	<package name="comanda" namespace="/comanda" extends="struts-default">
	
		<result-types>
			<result-type name="imageResult"
				class="com.online.result.CustomImageBytesResult" />
		</result-types>

		<action name="Welcome" class="com.online.action.comanda.WelcomeComandaAction"
			method="execute">
			<result name="success">/pages/comanda/welcome.jsp</result>
		</action>		
		<action name="checkComanda"
			class="com.online.action.comanda.WelcomeComandaAction" method="checkComanda">
		</action>
		<action name="ajaxLoadPlat"
			class="com.online.action.comanda.WelcomeComandaAction" method="ajaxLoadPlat">
		</action>
		<action name="ajaxLoadNumPlat"
			class="com.online.action.comanda.WelcomeComandaAction" method="ajaxLoadNumPlat">
		</action>		
		<action name="ajaxLoadBeguda"
			class="com.online.action.comanda.WelcomeComandaAction" method="ajaxLoadBeguda">
		</action>
		<action name="checkComandaPromos"
			class="com.online.action.comanda.WelcomeComandaAction" method="checkComandaPromos">
		</action>		
		<action name="goToPas1Action" class="com.online.action.comanda.WelcomeComandaAction"
			method="goToPas1Action">
			<result name="success">/pages/comanda/infoComanda.jsp</result>
		</action>
		
		<!-- Action que carrega image de la BBDD -->
		<action name="ImageAction" class="com.online.image.ImageAction">
			<result name="success" type="imageResult">
			</result>
		</action>

	</package>
</struts>