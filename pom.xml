	<packaging>war</packaging>
	<version>0.0.1-SNAPSHOT</version>
	<name>onlineBot Maven Webapp</name>
	<url>http://maven.apache.org</url>


	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>

		<!-- Spring framework -->
		<dependency>
